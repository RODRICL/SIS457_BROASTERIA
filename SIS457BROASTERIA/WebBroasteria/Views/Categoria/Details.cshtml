@model WebBroasteria.Models.Categorium

@{
    ViewData["Title"] = "Detalle Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-dark mb-4">Detalle de Categoría</h1> <!-- Título en negro -->

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt class="col-sm-2">Usuario Registro</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioRegistro)
        </dd>

        <dt class="col-sm-2">Fecha Registro</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg"><i class="fa fa-edit"></i> Editar</a> <!-- Botón Editar en naranja -->
    <a asp-action="Index" class="btn btn-primary btn-lg"><i class="fa fa-arrow-left"></i> Volver a la lista</a> <!-- Botón Volver a la lista en azul -->
</div>

@* Estilo adicional para personalización del fondo y bordes *@
<style>
    h1 {
        font-size: 2rem; /* Tamaño de fuente del título */
        font-weight: bold;
        color: #000; /* Color negro para el título */
    }

    .row {
        justify-content: flex-start; /* Alineación de la columna a la izquierda */
    }

    .form-control {
        border-radius: 0.375rem; /* Bordes redondeados para los campos de texto */
        padding: 0.75rem 1rem;
        width: 100%; /* Asegura que el campo ocupe todo el espacio disponible */
    }

    .btn-lg {
        padding: 0.75rem 1.25rem;
        font-size: 1.1rem;
    }

    .btn-warning {
        background-color: #f39c12; /* Color naranja para el botón de editar */
        color: white;
    }

        .btn-warning:hover {
            background-color: #e67e22; /* Un naranja más oscuro para el hover */
        }

    .btn-primary {
        background-color: #007bff; /* Azul para el botón de volver */
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Un azul más oscuro para el hover */
        }

    .text-danger {
        font-size: 0.9rem; /* Ajuste en tamaño de texto de los errores */
    }

    .col-sm-2 {
        font-weight: bold;
    }

    .col-sm-10 {
        font-weight: normal; /* Quitar la cursiva y dejar la fuente normal */
    }

    .form-group {
        margin-bottom: 1.5rem;
    }
</style>
