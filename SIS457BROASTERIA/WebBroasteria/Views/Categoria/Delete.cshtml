@model WebBroasteria.Models.Categorium

@{
    ViewData["Title"] = "Eliminar Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-dark mb-4">Eliminar Categoría</h1> <!-- Título en negro -->

<h3 class="text-danger">¿Está seguro que desea eliminar el registro?</h3> <!-- Texto en rojo para advertencia -->

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">Usuario Registro</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioRegistro)
        </dd>
        <dt class="col-sm-2">Fecha Registro</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-danger btn-lg"><i class="fa fa-trash"></i> Eliminar</button> <!-- Botón rojo -->
        </div>
        <div class="form-group mt-2">
            <a asp-action="Index" class="btn btn-primary btn-lg"><i class="fa fa-arrow-left"></i> Volver a la lista</a> <!-- Botón azul -->
        </div>
    </form>
</div>

@* Estilo adicional para personalización del fondo y bordes *@
<style>
    h1 {
        font-size: 2rem; /* Tamaño de fuente del título */
        font-weight: bold;
        color: #000; /* Color negro para el título */
    }

    h3.text-danger {
        font-size: 1.25rem; /* Tamaño de fuente para la advertencia */
        font-weight: bold;
    }

    .form-control {
        border-radius: 0.375rem; /* Bordes redondeados para los campos de texto */
        padding: 0.75rem 1rem;
        width: 100%; /* Asegura que el campo ocupe todo el espacio disponible */
    }

    .btn-lg {
        padding: 0.75rem 1.25rem;
        font-size: 1.1rem;
    }

    .btn-danger {
        background-color: #dc3545; /* Color rojo para el botón de eliminar */
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333; /* Un rojo más oscuro para el hover */
        }

    .btn-primary {
        background-color: #007bff; /* Azul para el botón de volver */
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Un azul más oscuro para el hover */
        }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .text-danger {
        font-size: 0.9rem; /* Ajuste en tamaño de texto de los errores */
    }

    .row {
        justify-content: flex-start; /* Alineación de la columna a la izquierda */
    }
</style>
