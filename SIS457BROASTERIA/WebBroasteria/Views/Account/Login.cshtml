@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Estilos generales para la página de login */
    body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        font-family: 'Arial', sans-serif;
        background-color: #f4f6f9;
    }

    .login-container {
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        transition: transform 0.3s ease-in-out;
    }

        .login-container:hover {
            transform: translateY(-10px); /* Efecto hover */
        }

    .login-header {
        text-align: center;
        margin-bottom: 30px;
    }

        .login-header h2 {
            color: #007bff;
            font-size: 24px;
            margin-bottom: 15px;
        }

    input[type="text"], input[type="password"] {
        width: 100%;
        padding: 12px;
        margin-bottom: 20px;
        border: 2px solid #ddd;
        border-radius: 8px;
        font-size: 16px;
        transition: all 0.3s ease;
        background-color: #f9f9f9;
    }

        input[type="text"]:focus, input[type="password"]:focus {
            outline: none;
            border-color: #007bff;
            background-color: #fff;
            box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.2);
        }

    button[type="submit"] {
        width: 100%;
        padding: 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        button[type="submit"]:hover {
            background-color: #0056b2;
        }

    label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #333;
    }

    .forgot-password {
        text-align: right;
        margin-top: 15px;
    }

        .forgot-password a {
            color: #007bff;
            font-size: 14px;
            text-decoration: none;
        }

            .forgot-password a:hover {
                color: #0056b2;
                text-decoration: underline;
            }

    /* Estilos del footer */
    footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background-color: #343a40;
        color: white;
        text-align: center;
        padding: 12px 0;
        font-size: 14px;
    }

        footer a {
            color: #007bff;
            text-decoration: none;
        }

            footer a:hover {
                color: #0056b2;
            }

    /* Estilo para checkbox */
    .form-check-input:checked {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>

<div class="login-container">
    <div class="login-header">
        <h2>INICIAR SESIÓN</h2>
    </div>

    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="usuario" class="control-label"></label>
            <input asp-for="usuario" class="form-control" placeholder="Usuario" required />
            <span asp-validation-for="usuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="clave" class="control-label"></label>
            <input asp-for="clave" type="password" class="form-control" placeholder="Contraseña" required />
            <span asp-validation-for="clave" class="text-danger"></span>
        </div>
        <div class="form-group form-check mb-3">
            <input type="checkbox" class="form-check-input" id="recordarme" name="recordarme" />
            <label class="form-check-label" for="recordarme">Recordarme</label>
        </div>
        <button type="submit" class="btn btn-primary">ACCEDER</button>
        <div class="forgot-password mt-3">
            <a asp-controller="Account" asp-action="ResetPassword">¿Olvidaste tu contraseña?</a>
        </div>
    </form>
</div>

<footer>
    BROASTERIA HANDA - <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de privacidad</a>
</footer>
